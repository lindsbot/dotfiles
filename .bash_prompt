export GIT_PS1_SHOWDIRTYSTATE=1
export GIT_PS1_SHOWUNTRACKEDFILES=1
export GIT_PS1_SHOWUPSTREAM="auto"

LIGHT_GRAY=$(tput setaf 7)
BLACK=$(tput setaf 0)
RED=$(tput setaf 1)
GREEN=$(tput setaf 2)
YELLOW=$(tput setaf 3)
LIME_YELLOW=$(tput setaf 190)
POWDER_BLUE=$(tput setaf 153)
BLUE=$(tput setaf 4)
MAGENTA=$(tput setaf 5)
CYAN=$(tput setaf 6)
WHITE=$(tput setaf 7)
BRIGHT=$(tput bold)
NORMAL=$(tput sgr0)
BLINK=$(tput blink)
REVERSE=$(tput smso)
UNDERLINE=$(tput smul)

# export PS1="\[\033[01;32m\]\h\[\033[01;34m\] \w\[\033[00m\] \$(__git_ps1 \" (%s)\") \n\$ "

export PS1="\[$YELLOW\]\t \[$MAGENTA\]\u @ \[$BLUE\]\w\[$CYAN\]\$(__git_ps1 \" (%s)\") \n\[$NORMAL\]$ "
